<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scroll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/main_linear_in_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linear_layout_for_gallery_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="200dp">

                <LinearLayout
                    android:id="@+id/linear_layout_weather_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >


                    <LinearLayout
                        android:id="@+id/date_weather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView_day_date_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Tuesday, 12 July"
                            android:textColor="@color/black"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/textView_weather_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Cloudy"
                            android:textSize="30dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        android:text="23°C"
                        android:textColor="@color/black"
                        android:textSize="34dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="50dp"
                        />

                    <ImageView
                        android:id="@+id/tem_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/rainy_day_round"
                        android:layout_margin="10dp"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linear_layout12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    app:cardElevation="30dp"
                    app:cardCornerRadius="25dp"
                    android:elevation="200dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:padding="15dp">


                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/banana_round" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/text_style"
                            android:gravity="center_horizontal"

                            android:text="केला"
                            android:textColor="@color/black"
                            android:textSize="35dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardElevation="30dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="25dp"
                    android:elevation="200dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:padding="15dp">


                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/cauliflower_round" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"

                            android:background="@drawable/text_style"

                            android:gravity="center_horizontal"
                            android:text="गोभी"
                            android:textColor="@color/black"
                            android:textSize="35dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"

                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardElevation="30dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="25dp"
                    android:elevation="200dp"
                    >

                    <LinearLayout
                        android:id="@+id/linear_layout21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/chili_round"
                            />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="मिर्च"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/text_style"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="35dp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardElevation="30dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="25dp"
                    android:elevation="200dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/gourd_round"
                            />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="लौकी"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/text_style"

                            android:textColor="@color/black"
                            android:textSize="35dp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/card31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    app:cardElevation="30dp"
                    app:cardCornerRadius="25dp"
                    android:elevation="200dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/eggplant_round"
                            />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="बैंगन"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/text_style"
                            android:gravity="center_horizontal"
                            android:textColor="@color/black"
                            android:textSize="35dp"/>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card32"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    app:cardElevation="30dp"
                    app:cardCornerRadius="25dp"
                    android:elevation="200dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_more_horiz_24"/>






                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#33ADE8"
                android:weightSum="3"
                >


<!--                <TextView-->
<!--                    android:layout_width="153dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:layout_height="wrap_content"-->

<!--                    android:background="@drawable/bottom_textview_background"-->
<!--                    android:textSize="50dp" />-->

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:background="@drawable/camera_background"
                    android:src="@drawable/camera" />

<!--                <TextView-->
<!--                    android:layout_width="153dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/bottom_textview_background"-->
<!--                    android:textSize="50dp" />-->
            </LinearLayout>

        </LinearLayout>










    </ScrollView>


</LinearLayout>